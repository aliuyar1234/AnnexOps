# Docker Compose environment (copy to `.env` and fill values)
ENVIRONMENT=development

# Reverse proxy port (docker-compose.prod.yml)
# APP_HTTP_PORT=80

# PostgreSQL
POSTGRES_PASSWORD=

# MinIO
MINIO_ROOT_USER=
MINIO_ROOT_PASSWORD=
MINIO_BUCKET=annexops-attachments

# App secrets
JWT_SECRET=
BOOTSTRAP_TOKEN=

# CORS (prod: no wildcards)
CORS_ALLOW_ORIGINS=http://localhost:3000
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Accept,Authorization,Content-Type,X-Request-ID,X-Bootstrap-Token,X-API-Key,X-Metrics-Token
CORS_ALLOW_CREDENTIALS=true

# Refresh cookie (optional)
REFRESH_COOKIE_SAMESITE=lax
# REFRESH_COOKIE_SECURE=
# REFRESH_COOKIE_DOMAIN=
# REFRESH_COOKIE_PATH=/api/auth/refresh
# REFRESH_COOKIE_NAME=refresh_token

# Logging retention (Module F)
ALLOW_RAW_PII=false
RETENTION_DAYS=180

# Rate limiting (production-only safeguard)
RATE_LIMIT_WRITE_PER_MINUTE=120
RATE_LIMIT_REFRESH_PER_MINUTE=60
RATE_LIMIT_ACCEPT_INVITE_PER_HOUR=20

# Observability (optional)
# Protects `/api/metrics` in production (send header `X-Metrics-Token: <token>`)
METRICS_TOKEN=
# Log SQL queries slower than this threshold (0 disables)
SLOW_QUERY_MS=0
