# Database
DATABASE_URL=postgresql://annexops:annexops@localhost:5432/annexops

# JWT Configuration
# Required: set to a long random value (32+ chars)
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12
ENVIRONMENT=development

# API docs (Swagger/ReDoc/OpenAPI). Default: enabled in development, disabled in production.
# API_DOCS_ENABLED=true

# Bootstrap (first organization creation). Required to enable POST /api/organizations.
# BOOTSTRAP_TOKEN=generate-a-long-random-token

# Email (for invitations - optional for dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@annexops.local

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=annexops-attachments
MINIO_USE_SSL=false

# LLM Assist (Module G)
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=
LLM_MODEL=claude-3-sonnet-20240229
LLM_ENABLED=true

# Observability (optional)
# Protects `/api/metrics` in production (send header `X-Metrics-Token: <token>`)
METRICS_TOKEN=
# Log SQL queries slower than this threshold (0 disables)
SLOW_QUERY_MS=0
